<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".PatientDashboardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/bottomNavigationView"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/default_profile_pic"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:background="@drawable/circle_outline"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/welcomeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Welcome, Nathan"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/daysOfWeekLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/dayContainerMon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/dayTextViewMon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MON"
                            android:textSize="12sp"
                            android:textColor="@color/dayTextColor"  android:layout_marginBottom="4dp"/>

                        <ImageView
                            android:id="@+id/dayCheckmarkMon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_checkmark"
                            android:background="@drawable/circle_day_background"  android:padding="8dp"
                            android:visibility="invisible"
                            android:scaleType="centerInside" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dayContainerTue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/dayTextViewTue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TUE"
                            android:textSize="12sp"
                            android:textColor="@color/dayTextColor"  android:layout_marginBottom="4dp"/>

                        <ImageView
                            android:id="@+id/dayCheckmarkTue"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_checkmark"
                            android:background="@drawable/circle_day_background"  android:padding="8dp"
                            android:visibility="invisible"
                            android:scaleType="centerInside" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dayContainerWed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/dayTextViewWed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WED"
                            android:textSize="12sp"
                            android:textColor="@color/dayTextColor"  android:layout_marginBottom="4dp"/>

                        <ImageView
                            android:id="@+id/dayCheckmarkWed"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_checkmark"
                            android:background="@drawable/circle_day_background"  android:padding="8dp"
                            android:visibility="invisible"
                            android:scaleType="centerInside" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dayContainerThu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/dayTextViewThu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="THU"
                            android:textSize="12sp"
                            android:textColor="@color/dayTextColor"  android:layout_marginBottom="4dp"/>

                        <ImageView
                            android:id="@+id/dayCheckmarkThu"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_checkmark"
                            android:background="@drawable/circle_day_background"  android:padding="8dp"
                            android:visibility="invisible"
                            android:scaleType="centerInside" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dayContainerFri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/dayTextViewFri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FRI"
                            android:textSize="12sp"
                            android:textColor="@color/dayTextColor"  android:layout_marginBottom="4dp"/>

                        <ImageView
                            android:id="@+id/dayCheckmarkFri"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_checkmark"
                            android:background="@drawable/circle_day_background"  android:padding="8dp"
                            android:visibility="invisible"
                            android:scaleType="centerInside" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dayContainerSat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/dayTextViewSat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SAT"
                            android:textSize="12sp"
                            android:textColor="@color/dayTextColor" android:layout_marginBottom="4dp"/>

                        <ImageView
                            android:id="@+id/dayCheckmarkSat"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_checkmark"
                            android:background="@drawable/circle_day_background" android:padding="8dp"
                            android:visibility="invisible"
                            android:scaleType="centerInside" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dayContainerSun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/dayTextViewSun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SUN"
                            android:textSize="12sp"
                            android:textColor="@color/dayTextColor" android:layout_marginBottom="4dp"/>

                        <ImageView
                            android:id="@+id/dayCheckmarkSun"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_checkmark"
                            android:background="@drawable/circle_day_background" android:padding="8dp"
                            android:visibility="invisible"
                            android:scaleType="centerInside" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>


            <LinearLayout
                android:id="@+id/treatmentPlanCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_treatment_plan"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Treatment Plan"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Started on June 23"
                        android:textSize="14sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/quizCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/brain_icon"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Want to Learn More About Thumb Anatomy? Take our Quiz!"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/myImageButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="Go to Quiz"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You're Almost Done for Today"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="24dp">

                <ProgressBar
                    android:id="@+id/recoveryProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:indeterminate="false"
                    android:progress="20"
                    android:max="100"
                    android:rotation="-90"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    android:background="@drawable/circle_background"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/recoveryPercentageTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28%"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recovered"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:id="@+id/exercisesCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exercises"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:id="@+id/repsCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="125"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reps"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:background="#F8F8F8"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/bottomNavHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_home_active"
            android:padding="12dp"
            android:adjustViewBounds="true"
            android:maxHeight="48dp"
            android:maxWidth="48dp" />

        <ImageView
            android:id="@+id/bottomNavExercises"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/excersise_icon"
            android:padding="12dp"
            android:adjustViewBounds="true"
            android:maxHeight="48dp"
            android:maxWidth="48dp" />

        <ImageView
            android:id="@+id/bottomNavProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_progress"
            android:padding="12dp"
            android:adjustViewBounds="true"
            android:maxHeight="48dp"
            android:maxWidth="48dp" />

        <ImageView
            android:id="@+id/bottomNavProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_profile"
            android:padding="12dp"
            android:adjustViewBounds="true"
            android:maxHeight="48dp"
            android:maxWidth="48dp" />
    </LinearLayout>

</RelativeLayout>