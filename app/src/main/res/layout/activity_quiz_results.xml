<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#e8f4f8">

    <TextView
        android:id="@+id/congratsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congrats ðŸŽ‰"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/scoreMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="you scored"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3/3"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/quizCompletionMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="on the\nThumb Anatomy Quiz"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/navigationPromptTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Would you like to go:"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/takeQuizAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Quiz again >"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="#4472C4"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home >"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="#4472C4"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>